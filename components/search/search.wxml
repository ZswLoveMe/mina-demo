<!--components/search/search.wxml-->
<view class="container">
    <view class="header">
        <view class="search-container">
            <image class="icon" src="images/search.png" />
            <input value="{{query}}" placeholder-class='in-bar' placeholder='书籍名' class='bar' auto-focus="true" />
            <image class="cancel-img" src="images/cancel.png" bind:tap="onCancel" />
        </view>
        <view  class='cancel'  bind:tap="onCancel" >取消</view>
    </view>
</view> 
